<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spring.model.mapper.OrderMapper">


	<select id="checkItemCount" parameterType="List"
		resultType="int">
		select itemCount,itemPrice,itemSalePrice 
		from itemOption
		where itemOptionNo in
		<foreach item="item" collection="list" open="(" separator=","
			close=")">
			#{item.itemOptionNo,jdbcType=INTEGER}
		</foreach>
		order by itemOptionNo
	</select>
</mapper>