<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="spring.model.mapper.AdminMapper">
	<select id="count" parameterType="int" resultType="int">
		select count(stat) from admintest where stat = #{stat}
	</select>
	<select id="list" parameterType="int" resultType="AdminDTO">
		select * from admintest where stat = #{stat}
	</select>
	
	<select id="noticel" parameterType="int" resultType="NoticeDTO">
		select no, subject, to_char(wdate, 'mm-dd') wdate from notice
		
		<![CDATA[
		where rownum <= #{rownum} order by no desc
		]]>
	</select>
	
	<!-- 
		<update id="updateStat" parameterType="Map">
		update admintest  
		set stat = stat + 100
		where no = #{no} 
	</update>	
	 -->
</mapper>